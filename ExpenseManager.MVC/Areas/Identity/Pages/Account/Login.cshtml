@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="login-row">
    <div class="login-column">
        <section class="login-section">
            <form id="account" method="post" class="login-form">
                <h2 class="login-heading">Use a local account to log in.</h2>
                <hr class="login-divider" />
                <div asp-validation-summary="ModelOnly" class="login-error-message" role="alert"></div>
                <div class="login-input-group">
                    <input asp-for="Input.Email" class="login-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="login-error-message"></span>
                </div>
                <div class="login-input-group">
                    <input asp-for="Input.Password" class="login-input" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="login-error-message"></span>
                </div>
                <div class="login-checkbox">
                    <label asp-for="Input.RememberMe" class="form-label login-check-input">
                        <input class="login-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="login-button">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
