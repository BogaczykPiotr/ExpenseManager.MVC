@model IEnumerable<ExpenseManager.Application.DTOS.UserDto>
@{
    var counter = 1;
}
<div class="container">
<div class="row">
    <div class="col-md-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title text-uppercase text-center text-primary mb-0">Manage Users</h1>
            </div>
            <div class="table-responsive">
                <table class="table no-wrap user-table mb-0">
                  <thead>
                    <tr class="text-center">
                      <th scope="col" class="border-0 text-uppercase font-medium pl-4">#</th>
                      <th scope="col" class="border-0 text-uppercase font-medium pl-4">UserName</th>
                      <th scope="col" class="border-0 text-uppercase font-medium pl-4">Email</th>
                      <th scope="col" class="border-0 text-uppercase font-medium pl-4">Role</th>
                      <th scope="col" class="border-0 text-uppercase font-medium pl-4">Options</th>
                     
                      
                    </tr>
                  </thead>
                  <tbody>
                      @foreach(var item in Model)
                      {
                        <tr class="text-center">
                            <td class="pl-4">@counter</td>
                            <td>
                                <h5 class="font-medium mb-0">@item.UserName</h5>
                            </td>
                            <td>
                                <span class="text-muted">@item.Email</span><br>
                            </td>
                             <td>
                                @*<span class="text-muted">@item.Role</span>*@
                                <span class="text-muted">User</span>
                            </td>
                            <td>
                                <a asp-controller="Admin" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger btn-circle btn-lg btn-circle ml-2" title="Delete"><i class="fa fa-trash"></i> </a>
                                <a asp-controller="Admin" asp-action="EditUser" asp-route-Id="@item.Id" class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2" title="Edit"><i class="fa fa-edit"></i> </a>
                            </td>
                            </tr>
                            counter++;
                            }            
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>