@model ExpenseManager.MVC.Controllers.CreateViewModel

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<script defer src="@Url.Content("~/js/site.js")"></script>

@{
    var uniqueCategories = Model.TransferDto
        .Select(t => t.Category)
        .Distinct();
}

<div class="main-rectangle">
    <p class="title">Create New Transfer</p>
    <form method="post">
        <div>
            <input type="checkbox" id="switch" name="Ingoing" /><label for="switch"></label>
            <p class="switch-text">Outgoing</p>
        </div>
        <div class="input-box">
            <span class="details">Value</span>
            <input type="text" placeholder="Enter Value" required name="Value">
        </div>
        <div class="input-box">
            <span class="details">Details (optional)</span>
            <input type="text" placeholder="Enter Details" name="Description">
        </div>
        <div class="input-box">
            <span class="details">Category</span>
            <a href="#" class="create-category">Create New</a>
            <select class="category-input" name="Category">
                @foreach (var categories in uniqueCategories)
                {
                    <option value="@categories">@categories</option>
                }
            </select>
        </div>
        <button class="create-button" type="submit">Create </button>
    </form>
</div>