@model IEnumerable<ExpenseManager.Application.DTOS.CategoryDto>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@{
    var settingsDto = ViewData["SettingsDto"] as ExpenseManager.Application.DTOS.SettingDto;

    var uniqueCategories = Model
        .Select(c => c.Name)
        .Distinct();
}
@if (settingsDto.Language == "english")
{
    <a class="create-transfer" href="@Url.Action("CreateUpcomingAction", "ExpenseManager")">New Upcoming Action</a>


    <div class="main-rectangle-grid-actions">


        @foreach (var category in uniqueCategories)
        {
            <div class="categories-container">
                <h1>@category</h1>
                <a href="#">edit</a>
                <a href="#">delete</a>
            </div>
        }

    
</div>
    <a class="create-new-category" href="@Url.Action("CreateNewCategory", "ExpenseManager")">Create New Category</a>
}
@if (settingsDto.Language == "polski")
{
    <a class="create-transfer" href="@Url.Action("CreateUpcomingAction", "ExpenseManager")">Nowa Nadchodząca Akcja</a>


    <div class="main-rectangle-grid-actions">


        @foreach (var category in uniqueCategories)
        {
            <div class="categories-container">
                <h1>@category</h1>
                <a href="#">edytuj</a>
                <a href="#">usuń</a>
            </div>
        }


    </div>
    <a class="create-new-category" href="@Url.Action("CreateNewCategory", "ExpenseManager")">Stwórz Nową Kategorię</a>
}
@if (settingsDto.Language == "deutsch")
{
    <a class="create-transfer" href="@Url.Action("CreateUpcomingAction", "ExpenseManager")">Neue bevorstehende Aktion</a>


    <div class="main-rectangle-grid-actions">


        @foreach (var category in uniqueCategories)
        {
            <div class="categories-container">
                <h1>@category</h1>
                <a href="#">bearbeiten</a>
                <a href="#">löschen</a>
            </div>
        }


    </div>
    <a class="create-new-category" href="@Url.Action("CreateNewCategory", "ExpenseManager")">Erstelle eine neue Kategorie</a>
}