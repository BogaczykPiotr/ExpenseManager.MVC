@model ExpenseManager.MVC.Controllers.SettingViewModel
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <div class="main-rectangle">
        <h1 class="settings-title">Settings</h1>
        <form class="settings-form" method="post">
            <div class="form-select">
                <p>Language: @Model.SettingsDto.Language</p>
                <select class="form-select" name="Language">
                        <option value="" disabled selected>English</option>
                        <option value="deutsch">Deutsch</option>
                        <option value="polski">Polski</option>
                </select>
                <p>Currency: @Model.SettingsDto.Currency</p>
                <select class="form-select" name="Currency">
                    @if (Model.SettingsDto.Currency == "zloty")
                    {
                        <option value="" disabled selected>zł</option>
                        <option value="dollar">$</option>
                        <option value="pound">£</option>
                        <option value="euro">€</option>
                    }
                    else if (Model.SettingsDto.Currency == "dollar")
                    {
                        <option value="" disabled selected>$</option>
                        <option value="zloty">zł</option>
                        <option value="pound">£</option>
                        <option value="euro">€</option>
                    }
                    else if (Model.SettingsDto.Currency == "pound")
                    {
                        <option value="" disabled selected>£</option>
                        <option value="dollar">$</option>
                        <option value="zloty">zł</option>
                        <option value="euro">€</option>
                    }
                    else if (Model.SettingsDto.Currency == "euro")
                    {
                        <option value="" disabled selected>€</option>
                        <option value="dollar">$</option>
                        <option value="zloty">zł</option>
                        <option value="pound">£</option>
                    }


                </select>
            </div>
            <button class="confirm-settings" type="submit">confirm</button>
        </form>
    </div>