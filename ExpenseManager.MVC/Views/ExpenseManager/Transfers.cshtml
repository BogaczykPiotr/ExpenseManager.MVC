@model IEnumerable<ExpenseManager.Application.DTOS.TransferDto>

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<script defer src="@Url.Content("~/js/site.js")"></script>

<div class="left-rectangle">
    <img class="logo" src="@Url.Content("~/images/Logo.png")">
    <a href="@Url.Action("Dashboard", "ExpenseManager")" class="link first-group first-element">
        <img src="@Url.Content("~/images/Dashboard.png")">
        <span class="text">Dashboard</span>
    </a>
    <a href="@Url.Action("Transfers", "ExpenseManager")" class="link first-group">
        <img src="@Url.Content("~/images/Transfers.png")">
        <span class="text">Transfers</span>
    </a>
    <a href="@Url.Action("Savings", "ExpenseManager")" class="link first-group">
        <img src="@Url.Content("~/images/Savings.png")">
        <span class="text">Savings</span>
    </a>
    <a href="Achievements.html" class="link first-group">
        <img src="@Url.Content("~/images/History.png")">
        <span class="text">Achievements</span>
    </a>
    <hr class="line">
    <a href="@Url.Action("Settings", "ExpenseManager")" class="link second-group">
        <img src="@Url.Content("~/images/Settings.png")">
        <span class="text">Settings</span>
    </a>
    <a href="#" class="link second-group">
        <img src="@Url.Content("~/images/ContactUs.png")">
        <span class="text">Contact us</span>
    </a>
</div>

<div class="right-rectangle">
    <div class="right-content">
        <a href="#" class="right-links">
            <img class="right-link" src="@Url.Content("~/images/Stats.png")">
        </a>
        <a href="#" class="right-links">
            <img class="right-link" src="@Url.Content("~/images/Alerts.png")">
        </a>
        <a href="#" class="right-links">
            <img class="right-link" src="@Url.Content("~/images/Account.png")">
        </a>
    </div>
    <div class="actions">
        <div class="recent-actions">
            <p>Recent Actions</p>
            <a href="#"><img class="actions-show-more" src="@Url.Content("~/images/More.png")" alt="show more"></a>
        </div>
        <div class="actions-query">
            <!--database query-->
            <img class="actions-query-category" src="" alt="">
            <p class="actions-query-description">Description</p>
            <p class="actions-query-date">date</p>
            <p class="actions-query-value ingoing-value">value</p>
            <!--database query-->
        </div>
        <div class="upcoming-actions">
            <p>Upcoming Actions</p>

            <a href="#"><img class="actions-show-more" src="@Url.Content("~/images/More.png")" alt="show more"></a>
        </div>
        <div class="actions-query">
            <!--database query-->
            <img class="actions-query-category" src="" alt="">
            <p class="actions-query-description">Description</p>
            <p class="actions-query-date">date</p>
            <p class="actions-query-value ingoing-value">value</p>
            <!--database query-->
        </div>
    </div>
    </div>
</div>
<a class="create-transfer" href="@Url.Action("Create", "ExpenseManager")">New Transfer</a> <!--for ASP edit-->
<p class="last-transfers">Last Transfers</p>
<div class="main-rectangle-transfers">

    @foreach (var transfer in Model)
    {
        <div class="transfers-list @(transfer.Ingoing ? "transfer-ingoing" : "transfer-outgoing")">
            <h1 class="transfers-money">@transfer.Value</h1>
            <p class="transfers-category">@transfer.Category</p>
            <p class="transfers-date">@transfer.CreatedAt</p>
            <a href="#" class="show-details">
                <span>Details</span>
            </a>
        </div>
    }
</div>