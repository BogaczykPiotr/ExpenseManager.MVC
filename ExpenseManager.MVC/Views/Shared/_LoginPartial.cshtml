@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


    @if (SignInManager.IsSignedIn(User))
    {
            <a asp-area="Identity" asp-page="/Account/Manage/Dashboard" title="Manage">Hello @User.Identity</a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Dashboard", "ExpenseManager", new { area = ""})">
                <button type="submit">Logout</button>
            </form>
    }
    else
    {
        <a class="register-btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="login-btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }


