@model ExpenseManager.Application.Commands.LoginUser.LoginUserCommand;

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<h1 class="login-register-title">Log In</h1>
<div class="login-register-main-rectangle">
    <div class="login-register-form">
        <form method="post">
            <div>
                <label>Email</label>
                <input title="Enter Email" asp-for="Email" />
            </div>
            <div>
                <label>Password</label>
                <input title="Enter Password" asp-for="Password" type="password" />
            </div>
            <button class="login-register-btn" type="submit">
                Confirm
            </button>
        </form>
    </div>
</div>